# Variablesi
CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM =rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

# Rules
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\# *.swp

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all
